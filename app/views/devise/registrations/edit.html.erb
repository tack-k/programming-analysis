  <%= render "common/header" %>

  <%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>



  <div class='form-wrap edit-main'>
    <%= render 'common/error_messages', model: f.object %>
    <div class="edit-wrap">
      <div class="edit-button">
        <%= link_to 'Topへ戻る', root_path %>
      </div>
    </div>

    <div class='form-header'>
      <h1 class='form-header-text'>
        会員の登録内容
      </h1>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ユーザーネーム</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :username, class:"input-default" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">診断結果</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:result_id, Result.all, :id, :title, {}, {class:"input-default", id:"result"}) %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">新しいパスワード</label>
      </div>
      <%= f.password_field :password, class:"input-default" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">パスワード（確認用）</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">現在のパスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :current_password, class:"input-default" %>
    </div>

    <div class='register-btn'>
      <%= f.submit "編集" ,class:"register-color-btn" %>
    </div>

    <div class="edit-wrap">
      <div class="edit-button destroy-button">
        <%=  link_to '退会する', user_registration_path, method: :delete, data: {confirm: "本当に退会しますか?"} %>
      </div>
    </div>
  </div>


  <% end %>

  <%= render "common/footer" %>