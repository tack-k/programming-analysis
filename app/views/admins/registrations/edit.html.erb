  <%= render "common/header_management" %>

 <%= form_with model: @admin, url: admin_registration_path, class: 'registration-main', local: true do |f| %>

   

  <div class='form-wrap edit-main'>
 <%= render 'common/error_messages', model: f.object %>
    <div class="edit-wrap">
      <div class="edit-button">
        <%= link_to '一覧へ戻る', admins_index_path %>
      </div>
      <div class="edit-button destroy-button">
        <%=  link_to 'データ削除', admin_registration_path, method: :delete, data: {confirm: "本当に削除しますか?"} %>
      </div>
    </div>

    <div class='form-header'>
      <h1 class='form-header-text'>
        管理者の登録内容
      </h1>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label for="name" class="form-text">氏名</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :name, class:"input-default", id: "name" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label for="email" class="form-text">メールアドレス</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.email_field :email, class:"input-default", id:"email" %>
    </div>

    <div class="form-group">

      <div class='form-text-wrap'>
        <label for="password" class="form-text">新しいパスワード</label>
      </div>
      <%= f.password_field :password, class:"input-default", id:"password" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label for="password_confirmation" class="form-text">パスワード（確認用）</label>
      </div>
      <%= f.password_field :password_confirmation, class:"input-default", id:"password_confirmation" %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label for="current_password" class="form-text">現在のパスワード</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.password_field :current_password, class:"input-default", id:"current_password" %>
    </div>

    <div class='register-btn'>
      <%= f.submit "編集" ,class:"register-color-btn" %>
    </div>
  </div>
  <% end %>
