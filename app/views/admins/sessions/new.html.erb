  <%= render "common/header_management" %>

 <%= form_with model: @admin, url: admin_session_path,  class: 'registration-main', local: true do |f| %> 
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      管理者情報入力
    </h1>
    <div class="form-header-change">
    <%= link_to '新規登録はこちら',  new_admin_registration_path %>
    </div>
  </div>
  <div class='login-flash-message'>
     <%= flash[:notice] %>
    <%= flash[:alert] %> 
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
     <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %> 
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
     <%= f.password_field :password, class:"input-default", id:"password" %> 
  </div>
  <div class='register-btn'>
     <%= f.submit "ログイン" ,class:"register-color-btn" %> 
  </div>
</div>
 <% end %> 

 <%= render "common/footer"%>