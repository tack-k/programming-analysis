  <%= render "common/header_management" %>

  <div class="management">
    <div class="manegement-top">
      <div class="manegement-title">管理者</div>
      <div class="new-manegement-wrapper">
        <div class="new-manegement-button">
          <%= link_to '編集', edit_admin_registration_path, class:"new-manegement-btn" %>
        </div>
        <div class="new-manegement-button">
          <%= link_to '削除', admin_registration_path, method: :delete, data: {confirm: "本当に削除しますか?"}, class:"new-manegement-btn" %>
        </div>
      </div>
    </div>
    <div class="management-inner">
      <div class="manegement-index">
        <table class="management-table">
          <tr class="management-record-h">
            <th>id</th>
            <th>name</th>
            <th>email</th>
            <th>created_at</th>
          </tr>
          <% @admins.each do |admin| %>
          <tr class="management-record-d">
            <td><%= admin.id %></td>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>
            <td><%= admin.created_at %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>